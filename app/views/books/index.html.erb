<!-- <h1>Index Views</h1> !--> 
<!-- Looping through books to display them !--> 
<h1 class= "current-category"><%= params[:category] %> </h1> <!-- params is the category name !-->

<% if @books.count == 0  %> <!-- books is avialable because it was defined in index method in book controller!-->

    <h1>There are no books currently in this category</h1>

<% else %>

  <% @books.each do |book| %>
    <h2> <%= link_to book.title, book_path(book) %> </h2>
  <% end %>
  
<% end %>


