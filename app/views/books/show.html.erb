<h2> <%= @book.title %> </h2>
<h3> <%= @book.author %> </h3>
<h4> Category: <%= @book.category.name%> </h4> <!-- getting category of book and getting name of that category !-->
<p> <%= @book.description %> </p>

<%= link_to "Back", root_path %>

<% if user_signed_in? %>

    <% if @book.user_id == current_user.id %> <!--- if the books current user id is equivalent to the current user id we want links to appear!-->

        <%= link_to "Edit", edit_book_path(@book)  %>
        <%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure?" }  %>

    <% end %>

<% end %>